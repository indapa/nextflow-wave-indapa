params {
    
    samplesheet="/workspaces/nextflow-wave-indapa/Samplesheets/samplesheet.csv"
    reference = '/workspaces/nextflow-wave-indapa/resources/human_GRCh38_no_alt_analysis_set.fasta'
    reference_index = "${reference}.fai"
    aligned_output_dir= '/workspaces/nextflow-wave-indapa/pbmm2-results'
    cpg_output_dir = '/workspaces/nextflow-wave-indapa/pb-CpG-results'
    cpgmodel = '/workspaces/nextflow-wave-indapa/resources/pileup_calling_model.v1.tflite'
    cpu =6
    sort_threads = 2

}

workDir = '/workspaces/nextflow-wave-indapa/nextflow-logs'
docker.enabled = true
wave.enabled = true

tower {
  accessToken = "$TOWER_ACCESS_TOKEN"
}

report {
  enabled = true
  file = 'https://seqera.io/report.html'
}
timeline {
  enabled = true
  file = 'https://seqera.io/timeline.html'
}
trace {
  enabled = true
  file = 'https://seqera.io/trace.txt'
}
dag {
  enabled = true
  file = 'https://seqera.io/dag.html'
}